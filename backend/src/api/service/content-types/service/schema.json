{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Medical Service",
    "description": "Medical services for structured data and detailed SEO pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 160,
      "description": "Brief description for meta tags and previews"
    },
    "procedureType": {
      "type": "enumeration",
      "enum": ["diagnostic", "therapeutic", "preventive", "rehabilitation"],
      "required": true
    },
    "bodyLocation": {
      "type": "json",
      "description": "Body areas treated (for schema markup)"
    },
    "preparation": {
      "type": "text",
      "description": "How to prepare for this service"
    },
    "duration": {
      "type": "string",
      "description": "Typical duration of service"
    },
    "recovery": {
      "type": "text",
      "description": "Recovery information"
    },
    "cost": {
      "type": "string",
      "description": "Cost information or insurance coverage"
    },
    "keywords": {
      "type": "text",
      "description": "SEO keywords for this service"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 70,
      "description": "SEO title tag"
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160,
      "description": "SEO meta description"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "icon": {
      "type": "string",
      "description": "Icon identifier for UI"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "physicians": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::physician.physician"
    }
  }
}