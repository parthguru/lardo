{
  "kind": "collectionType",
  "collectionName": "physicians",
  "info": {
    "singularName": "physician",
    "pluralName": "physicians",
    "displayName": "Physician",
    "description": "Medical staff profiles for structured data and SEO"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "description": "Professional title (Dr., MD, DC, etc.)"
    },
    "specialties": {
      "type": "json",
      "description": "Array of medical specialties"
    },
    "bio": {
      "type": "richtext"
    },
    "education": {
      "type": "json",
      "description": "Educational background and certifications"
    },
    "languages": {
      "type": "json",
      "description": "Languages spoken"
    },
    "licenseNumber": {
      "type": "string"
    },
    "licenseState": {
      "type": "string",
      "default": "TX"
    },
    "yearsExperience": {
      "type": "integer"
    },
    "services": {
      "type": "json",
      "description": "Medical services provided"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}